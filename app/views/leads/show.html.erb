<h1 class = "text-center">Lead <%= @lead.name %></h1>

<h5>
Tags: <% @lead.tags.each do |tag| %>
  <span id="<%= tag.id %>" class="badge bg-info"><%= tag.name %></span>
<% end %>
</h5>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <td>Name</td>
      <td>Description</td>
      <td>Url</td>
      <td>Tags</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @collaterals.each do |collateral| %>
    <tr>
      <td><%= link_to collateral.name, collateral_path(collateral) %></td>
      <td><%= collateral.description %></td>
      <td><%= collateral.url %></td>
      <td>
       <% collateral.tags.each do |tag| %>
        <%= tag.name %>
       <% end %>
      </td>
      <td class="text-right">
        <%= link_to 'Remove', collateral, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <a class="btn btn-success" href="/collaterals/<%= collateral.id %>/edit">Edit</a>
      </td>
    </tr>
    <% end %>
  <tbody>
</table>
