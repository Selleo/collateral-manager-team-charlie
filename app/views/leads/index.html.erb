<h1 class = "text-center">Leads</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <td>Name</td>
      <td>Tags</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @leads.each do |lead| %>
    <tr>
      <td><%= link_to lead.name, lead_path(lead) %></td>
      <td>
       <% lead.tags.each do |tag| %>
        <%= tag.name %>
       <% end %>
      </td>
      <td class="text-right">
        <%= link_to 'Remove', lead, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <a class="btn btn-success" href="/lead/<%= lead.id %>/edit">Edit</a>
      </td>
    </tr>
    <% end %>
  <tbody>
</table>
